{
  "name": "GPM Login",
  "version": "1.4.0.0",
  "description": "Kết nối với tool GPM Login (trình duyệt từ phiên bản 111 trở lên)",
  "permissions": [
    "cookies",
    "tabs",
    "privacy",
    "notifications",
    "management",
    "webNavigation",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "contextMenus",
    "processes",
    "<all_urls>",
    "contextMenus"
  ],
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "GPM Login"
  },
  "web_accessible_resources": ["*"],
  "manifest_version": 2
}
